{% extends '::default/adminPanel.html.twig' %}

{% block body %}
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">Listado de Empresas</div>
          <div class="panel-body">
            <table data-toggle="table" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                <thead>
                <tr>
                    <th data-field="id" data-sortable="true" class="thNaranja">ID</th>
                    <th data-field="nombre" data-sortable="true" class="thNaranja">NOMBRE</th>
                    <th data-field="direccion"  data-sortable="true" class="thNaranja">DIRECCIÓN</th>
                    <th data-field="cp" data-sortable="true" class="thNaranja">CP</th>
                    <th data-field="tel1" data-sortable="true" class="thNaranja">TELÉFONO 1</th>
                    <th data-field="tel2"  data-sortable="true" class="thNaranja">TELÉFONO 2</th>
                    <th data-field="fecha" data-sortable="true" class="thNaranja">CREACIÓN</th>
                </tr>
                </thead>
                <tbody>
                  {% for Empresa in Empresas %}
                  <tr>
                    <td class="col-xs-1">{{ Empresa.id }}</td>
                    <td class="col-xs-2">{{ Empresa.nombre }}</td>
                    <td class="col-xs-5">{{ Empresa.direccion }}</td>
                    <td class="col-xs-1">{{ Empresa.cp }}</td>
                    <td class="col-xs-1">{{ Empresa.telefono1 }}</td>
                    <td class="col-xs-1">{{ Empresa.telefono2 }}</td>
                    <td class="col-xs-1">{{ Empresa.fechaCreacion | date ('d/m/Y') }}</td>
                  </tr>
                  {% endfor %}
                 </tbody>
            </table>
          </div>
        </div>
      </div>
    </div><!--/.row-->

{% endblock %}
